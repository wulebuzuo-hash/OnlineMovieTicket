<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".z_smallactivity.Info_Movie">

    <include layout="@layout/lay_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电影名："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/info_movie_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="英文名："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/info_movie_englishname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="屏幕类型："
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/info_movie_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f00"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/info_movie_screen_button"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_shape"
                    android:text="选择"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="电影类型："
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/info_movie_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f00"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/info_movie_type_button"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_shape"
                    android:text="选择"
                    android:textSize="18sp"
                    android:textStyle="bold"
                     />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剧情简介："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/info_movie_story"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时长："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/info_movie_long"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="演员："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/info_movie_actor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导演："
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/info_movie_director"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上映日期:"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/info_movie_showdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f00"
                    android:textSize="20sp"></TextView>

                <Button
                    android:id="@+id/info_movie_showdateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="选择日期"
                    android:background="@drawable/btn_shape"
                    android:textSize="18sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下映日期:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/info_movie_downdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f00"
                    android:textSize="20sp"></TextView>

                <Button
                    android:id="@+id/info_movie_downdateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:text="选择日期"
                    android:background="@drawable/btn_shape"
                    android:textSize="18sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电影图片："
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/info_movie_readimg"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_shape"
                    android:text="选取图片"
                    android:textSize="18sp"></Button>

            </LinearLayout>
            <ProgressBar
                android:id="@+id/info_movie_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></ProgressBar>

            <ImageView
                android:id="@+id/info_movie_choose_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                ></ImageView>

            <Button
                android:id="@+id/info_movie_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:textColor="#fff"
                android:background="@color/purple_500"
                android:textSize="18sp"
                android:text="完成"></Button>
        </LinearLayout>
    </ScrollView>
</LinearLayout>