<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_comment_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_comment_user_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="账号"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"></TextView>
            <RatingBar
                android:id="@+id/item_comment_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3.5"
                android:indeterminate="false"
                style="?attr/ratingBarStyleIndicator"
                android:theme="@style/RatingBar"
                ></RatingBar>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/item_comment_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="评论内容"
        android:textColor="#000"
        android:textSize="18sp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_comment_time"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="时间"
            android:textColor="#000"></TextView>
        <ImageView
            android:id="@+id/item_comment_good_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_comment_good_0"></ImageView>
        <TextView
            android:id="@+id/item_comment_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999+"
            android:textSize="15sp"></TextView>
    </LinearLayout>
</LinearLayout>