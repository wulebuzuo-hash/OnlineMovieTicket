<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".z_smallactivity.List_UserHistory">

    <include layout="@layout/lay_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/list_user_history_searchEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入想要搜索的电影院名"></EditText>

        <Button
            android:id="@+id/list_user_history_searchButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pc_search"></Button>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/list_user_history_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ProgressBar>

    <ListView
        android:id="@+id/list_user_history_user_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>
    <FrameLayout
        android:id="@+id/list_user_history_frame"
        android:layout_width="match_parent"
        android:layout_height="50dp"></FrameLayout>

</LinearLayout>